/* --------------------------------- */
/* PLT.C.1 Links (Anchor)            */
/* --------------------------------- */

.tigris A:link, 
.tigris A:visited {
    text-decoration: underline;
}

.tigris A:hover, 
.tigris A:active {
    text-decoration: underline;
}

/* font */
.tigris A:link,
.tigris A:visited,
.tigris A:hover,
.tigris A:active
{
    font-family: Verdana, Helvetica, Arial, sans-serif;
    voice-family: "\"}\"";
    voice-family: inherit;
    font-size: 12px;
    color: #980000;
}


